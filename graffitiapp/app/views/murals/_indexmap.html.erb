<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <title>Reverse Geocoding</title>
    <style>
      /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
      #map {
        height: 100%;
      }
      /* Optional: Makes the sample page fill the window. */
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #floating-panel {
        position: absolute;
        top: 10px;
        left: 25%;
        z-index: 5;
        background-color: #fff;
        padding: 5px;
        border: 1px solid #999;
        text-align: center;
        font-family: 'Roboto','sans-serif';
        line-height: 30px;
        padding-left: 10px;
      }
      #floating-panel {
        position: absolute;
        top: 5px;
        left: 50%;
        margin-left: -180px;
        width: 350px;
        z-index: 5;
        background-color: #fff;
        padding: 5px;
        border: 1px solid #999;
      }
      #latlng {
        width: 225px;
      }
    </style>
  </head>
  <body>
    
    <div id = "showmap" style = "width:580px; height:400px;"></div>
    <script>
      
      // Create map
      function initMap() {
        var lat = 54.5996;
        var long = -5.90419;
        var latlng = new google.maps.LatLng(lat, long);
        var map = new google.maps.Map(document.getElementById('showmap'), {
          zoom: 15,
          center: latlng
        });

        var geocoder = new google.maps.Geocoder;
        var infowindow = new google.maps.InfoWindow({
          content: contentString
        });
      

        window.onload = function() {
          getReverseGeocodingData(geocoder, map, infowindow);
        };

        
            // google.maps.event.addListener(marker, 'mouseover', function () {
            //   infowindow.open(map, marker);
            // });
            // marker.addListener('mouseout', function() {
            //   infowindow.close();
            // });
            // google.maps.event.addListener(marker, 'click', function () {
            //   window.location.href = 'http://www.google.com';
            // });
      }
        
      var contentString = '<div id="content">'+
            '<div id="siteNotice">'+
            '</div>'+
            '<h3 id="address" class="firstHeading"></h3>'+
            '<div id="bodyContent">'+
            '<p> Image preview </p>'+
            '</div>';

      function getReverseGeocodingData(geocoder, map, infowindow) {

        var lat = 54.5996
        var long = -5.90419;
        var latlng = new google.maps.LatLng(lat, long);
        // This is making the Geocode request
        var geocoder = new google.maps.Geocoder();
        geocoder.geocode({'location': latlng}, function(results, status) {
          if (status === 'OK') {
            if (results[1]) {
              var marker = new google.maps.Marker({
                position: latlng,
                map: map
              });
        
              infowindow.open(map, marker);
              document.getElementById("address").innerHTML = results[1].formatted_address ;
            } else {
              window.alert('No results found');
            }
          } else {
            window.alert('Geocoder failed due to: ' + status);
            window.alert(latlng);
          }
        });
      }
    
      
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDqnbDDZdGNHuoFZk6LM3Jwq2JE8iVv7OA&callback=initMap">
    </script>
   
  </body>
</html>