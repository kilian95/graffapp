=simple_form_for @mural, html: {multipart: true} do |f|
  -if @mural.errors.any?
    #errors
      %h2
      =pluralize(@mural.errors.count, "error")
      prevented this mural from saving
      %ul
        -@mural.errors.full_messages.each do |msg|
          %li= msg
  
  =render 'map'
  .form-group
    =f.input :address, input_html: {class: 'form-control'}

  =f.button :submit, class: "btn btn-primary"
