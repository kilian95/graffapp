
%html
%head
	%title GraffApps
	%link{:href => "app/assets/img/icons/flavicon.png", :rel => "icon", :type => "image/png"}
	=include_gon
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags


	
%body
	-flash.each do |name, msg|
		=content_tag :div, msg, class: "alert alert-info"		

	%nav.navbar.navbar-default.custom		
		.container-fluid
			.navbar-header
				.navbar-brand 
					=link_to " GraffApp ", root_path
			%ul.nav.navbar-nav
				%li.active
					=link_to "Home", root_path, data: { turbolinks: false }
				%li	
					=link_to "Add", new_mural_path, data: { turbolinks: false }
	=yield


